{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "sourceMap": true
  },
  "files": [
    "./app/app.ts",
    "./app/bootstrap.ts",
    "./app/models/message.ts",
    "./app/models/thread.ts",
    "./app/models/user.ts",
    "./app/services/MessageService.ts",
    "./app/services/UserService.ts",
    "./app/util/uuid.ts",
    "./test/services/MessageService.spec.ts"
  ],
  "filesGlob": [
    "./app/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": true,
  "atom": {
    "rewriteTsconfig": true
  }
}
